{
  "name": "murhakaverit-website",
  "version": "0.1.0",
  "private": true,
  "description": "Combined Murhakaverit vault site with futuristic card layout",
  "engines": {
    "node": ">=20.17",
    "bun": ">=1.1"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "bunx playwright test",
    "test:ui": "bunx playwright test --ui",
    "test:headed": "bunx playwright test --headed",
    "sync-content": "bun scripts/sync-content.mjs",
    "precommit": "bun run sync-content && bun run lint && bun run build",
    "prepare": "bunx husky install"
  },
  "dependencies": {
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "1.54.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "husky": "^9.1.7",
    "playwright": "1.54.1",
    "tailwindcss": "^4",
    "typescript": "^5.9.2"
  }
}
